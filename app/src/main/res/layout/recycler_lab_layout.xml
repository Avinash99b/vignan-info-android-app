<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardBackgroundColor="@color/black"
    android:layout_marginHorizontal="@dimen/_10sdp">

    <RelativeLayout
        android:padding="@dimen/_10sdp"
        android:background="@drawable/card_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lab_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Id: 1"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lab_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:translationY="-10dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Name:- VSF-02"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lab_des_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="A room hidden"
            android:translationY="-10dp"
            android:textColor="@color/black"
            android:layout_below="@+id/lab_name_tv"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lab_floor_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:text="Floor: 1"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lab_incharge_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="Incharge: 221fe04005"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>